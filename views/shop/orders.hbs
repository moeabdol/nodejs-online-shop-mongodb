<main>
  {{#if hasOrders}}
    <ul>
      {{#each orders}}
        <li>
          <h1>#{{ this.id }}</h1>
          <ul>
            {{#each this.products}}
              <li>{{ this.product.title }} ({{ this.quantity }})</li>
            {{/each}}
          </ul>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <h1>No orders!</h1>
  {{/if}}
</main>
